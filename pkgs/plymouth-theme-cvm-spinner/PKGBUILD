_theme="cvm-spinner"
pkgname="plymouth-theme-$_theme"
pkgver="1"
pkgrel=1
pkgdesc="Cvm UI Desktop spinner"
arch=("any")
depends=("plymouth")

package() {
	cp -r "../${_theme}" .
    cd "${_theme}"
	cp "../../assets/watermark.png" .
	cp "../../assets/bgrt-fallback.png" .
	install -m755 -d "${pkgdir}/usr/share/plymouth/themes/$_theme"
	install -m644 -t "${pkgdir}/usr/share/plymouth/themes/$_theme" *

	cd ..

	# BGRT
	cp -r "../bgrt-cvm" .
    cd "bgrt-cvm"
	install -m755 -d "${pkgdir}/usr/share/plymouth/themes/bgrt-cvm"
	install -m644 -t "${pkgdir}/usr/share/plymouth/themes/bgrt-cvm" *
}
